
syntax on

set clipboard=unnamed
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set smartcase
set ignorecase
set noswapfile
set nobackup
set incsearch
set hlsearch
set laststatus=2 "lightline
set noshowmode "lightline
set backspace=indent,eol,start
set nowrap

let mapleader = " "
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:auto_save = 1

map <Home> ^
